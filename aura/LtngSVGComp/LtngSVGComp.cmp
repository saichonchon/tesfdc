<aura:component >
    <aura:attribute access="global" name="spanClass" default="" type="String" description="CSS classname for the SVG element" />
	<aura:attribute access="global" name="class" type="String" description="CSS classname for the SVG element" />
	<aura:attribute access="global" name="xlinkHref" type="String" description="SLDS icon path. Ex: /assets/icons/utility-sprite/svg/symbols.svg#download" />
	<aura:attribute access="global" name="ariaHidden" type="String" default="true" description="aria-hidden true or false. defaults to true" />
	<aura:attribute access="global" name="elementId" type="String" description="aria-hidden true or false. defaults to true" />
	
    
    
    <span aura:id="svg_content" class="{!v.spanClass}">
        
    </span>
</aura:component>
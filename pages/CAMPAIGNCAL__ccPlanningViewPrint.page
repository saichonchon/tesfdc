<apex:page controller="CAMPAIGNCAL.ccPlanningViewController" title="Campaigns Listing" label="Campaign Calendar Listing" sidebar="false" renderas="pdf">

<!-- <apex:styleSheet value="{!URLFOR($Resource.PlanningViewCSS)}"/>  -->
<head>

<style>

@page {

size:landscape;
margin:.5in;
@bottom-right { content: "Page " counter(page) " of " counter(pages); }
}

@page :first {
  margin-top: -.375in    /* Top margin on first page 10cm */
}

#planningViewTable_year{width:100%;}

body {
  font-family: Sans-Serif;
}

.hidden{
   display:none;
}

#planningView{
    width: 100%;
}

#planningViewTable_year{
    width: 100%;
    padding-top:0px;
    border-collapse: collapse;
    -fs-table-paginate: paginate;
    border-spacing:0px;
}

#planningViewTable_year tr th{
    background: none repeat scroll 0 0 transparent;
    border: medium none;
    border-collapse: collapse;
    color: #444444;
    font-size: 1.1em;
    font-weight: bold;
    text-align: center;
    text-transform: lowercase;
    overflow: visible;
    width: 5%;
    
}
.printTableHeader{
text-transform: none;
}
#planningViewTable_year tr td{   
    border: 1px solid #aaaaaa;
    border-collapse: collapse;
    text-align: center;
    font-size: 1em;
    padding: 1px 0;
    width: 5%;
    border: .5px solid #aaaaaa;
}

#planningViewTable_year tr th.wide{
    min-width: 175px;
}
#planningViewTable_year tr td.click{
    border-right: none;
    min-width: 175px;
}
#planningViewTable_year tr td.name {
    border-left: none;
    min-width: 175px;
}

input {
    padding: 0;
    margin: 0 .5em 1px 0;
    vertical-align: text-bottom;
    position: relative;

}

label {
    display: block;
    padding-left: 15px;
    text-indent: -15px;
}


.click, .name{
    cursor: pointer;
    padding-left: 1em;
    padding-right: 1em;
}

.click {
    border: none;
}

.click:hover{
    color: #015ba7;
}

.name:hover{
    color: #015ba7;
}

.tdWrapper{
    width: 100%;
    height: 100%;
    position: relative;
    margin: 0;
    padding: 0;
    user-select: none;
    -moz-user-select: none;
    -webkit-user-select: none;
}

.campaignStart, .campaignMid, .campaignEnd, .campaignOne{
    position: absolute;
    top: 0;
    bottom: 0;
    font-size: 1em !important;
    background-color: #ffde2e;
    cursor: pointer;
    padding: 0;
    z-index: 10;
    min-width:7px;
    min-height:18px;
}

.campaignOne{
    border-radius: 10px 10px 10px 10px;
    -moz-border-radius: 10px 10px 10px 10px;
    -webkit-border-radius: 10px 10px 10px 10px;
}

.campaignStart{
    border-radius: 10px 0 0 10px;
    -moz-border-radius: 10px 0 0 10px;
    -webkit-border-radius: 10px 0 0 10px;
    right: 0px;
}

.campaignMid{
    left: -1px;
    right: -1px;
}

.campaignEnd{
    border-radius: 0 10px 10px 0;
    -moz-border-radius: 0 10px 10px 0;
    -webkit-border-radius: 0 10px 10px 0;
    left: -1px;
}

/* IE Specific for filter */
.textDate{
    background-color: white;
    padding: 3px 2px;
    position: absolute;
    width: 3.5em;
    top: 1;
    font-size: .65em;
    z-index:20;
}

.inlineTextDate{
font-size: .65em;
padding: 3px 2px;
z-index:20;
}

.datesOff{
}

.textDateStart{
    right: 100%;
}

.textDateEnd{
    left: 100%;
}

.planningViewTable_yearTheadFixed{
    position: fixed;
    background: white;
    top: 0px;
    z-index: 20;
    border: 1px solid #aaa;
    left: 20px;
    right: 19px; /*1 for border*/
}
.planningViewTable_quarterTheadFixed{
    position: fixed;
    background: white;
    top: 0px;
    z-index: 20;
    border: 1px solid #aaa;
    left: 20px;
    right: 19px; /*1 for border*/
}
.planningViewTable_monthTheadFixed{
    position: fixed;
    background: white;
    top: 0px;
    z-index: 20;
    border: 1px solid #aaa;
    left: 20px;
    right: 19px; /*1 for border*/
}
.readMore{
    color: #015ba7;
}
.printTableHeader{
width:100%;
}
.listViewText {
    float: right;
    font-size: 1.5em;
    font-weight: normal;
    line-height: 1.1em;
    padding-top:10px;
}
.pageTitle{
float:left;
    font-size: 2em;
    font-weight: normal;
    line-height: 1.1em;

}

#planningViewTable_year tr td.name {
text-align: left;
}

#planningViewTable_year tr td.descr {
text-align:left;
}

.name, .descr{
}
.namediv{width:100%;overflow:hidden;text-overflow: ellipsis;}
.descrdiv{width:100%;overflow:hidden;text-overflow: ellipsis;}
</style> 

</head> 
